{
  "name": "eleventy-base-blog",
  "version": "8.0.0",
  "description": "A starter repository for a blog web site using the Eleventy site generator.",
  "repository": {
    "type": "git",
    "url": "git://github.com/ooloth/michaeluloth.com.git"
  },
  "author": {
    "name": "Michael Uloth",
    "email": "hello@michaeluloth.com",
    "url": "https://michaeluloth.com/"
  },
  "bugs": {
    "url": "https://github.com/ooloth/michaeluloth.com/issues"
  },
  "homepage": "https://github.com/ooloth/michaeluloth.com#readme",
  "scripts": {
    "benchmark": "DEBUG=Eleventy:Benchmark* npx @11ty/eleventy",
    "build": "ELEVENTY_PRODUCTION=true eleventy && NODE_ENV=production npx tailwindcss -i src/styles/main.css -c src/styles/tailwind.config.js -o _site/styles/main.css --minify",
    "debug": "DEBUG=Eleventy* npx @11ty/eleventy",
    "debugstart": "DEBUG=Eleventy* npx @11ty/eleventy --serve --quiet",
    "format:check": "npm run prettier -- --list-different",
    "format:fix": "npm run prettier -- --write",
    "lint": "eslint '**/*.{js,ts,tsx}' --ignore-path .gitignore",
    "prettier": "prettier \"**/*.+(css|graphql|html|js|json|jsonc|jsx|md|mdx|toml|ts|tsx|webc|yaml|yml)\" --ignore-path .gitignore",
    "start": "eleventy --serve --quiet & npx tailwindcss -i src/styles/main.css -c src/styles/tailwind.config.js -o _site/styles/main.css --watch",
    "types:check": "tsc",
    "validate": "npm run format:check && npm run lint && npm run types:check"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^3.1.0",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-bundle": "^1.0.4",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@tailwindcss/typography": "^0.5.9",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "luxon": "^3.3.0",
    "markdown-it-anchor": "^8.6.7",
    "prettier": "^2.8.8",
    "prettier-plugin-toml": "^0.3.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@11ty/eleventy-plugin-webc": "^0.11.1",
    "js-yaml": "^4.1.0"
  }
}
